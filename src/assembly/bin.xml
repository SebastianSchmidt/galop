<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <baseDirectory>${project.artifactId}-${project.version}-bin</baseDirectory>
    <files>
        <file>
            <source>${project.artifactId}-${project.version}.jar</source>
        </file>
        <file>
            <source>site/galop-user-guide-${project.version}.pdf</source>
            <destName>user-guide-${project.version}.pdf</destName>
        </file>
        <file>
            <source>README.md</source>
            <destName>README.txt</destName>
        </file>
        <file>
            <source>CHANGELOG.md</source>
            <destName>CHANGELOG.txt</destName>
        </file>
        <file>
            <source>../LICENSE</source>
            <destName>LICENSE.txt</destName>
        </file>
        <file>
            <source>generated-sources/license/THIRD-PARTY.txt</source>
            <destName>THIRD-PARTY-LICENSES.txt</destName>
        </file>
    </files>
</assembly>